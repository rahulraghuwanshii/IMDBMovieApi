<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:background="@color/black"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtImdbID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="IMDB Id : 4"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtImdbRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="IMDB Rating : 4"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txtImdbID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtDirectorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Director Name : Rajesh"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txtImdbRating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>